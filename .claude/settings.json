{
  "version": "1.0.0",
  "description": "Universal Claude Code starter - conservative defaults",

  "permissions": {
    "bash": {
      "allowedCommands": [],
      "requireConfirmation": true
    },
    "fileOperations": {
      "requireConfirmation": false,
      "excludePaths": [
        "**/.env",
        "**/.env.*",
        "**/secrets.*",
        "**/*secret*",
        "**/*password*",
        "**/*credential*"
      ]
    },
    "network": {
      "requireConfirmation": true,
      "allowedDomains": []
    }
  },

  "hooks": {
    "enabled": false,
    "strictMode": false,
    "hooks": []
  },

  "output": {
    "style": "concise",
    "includeLineNumbers": true,
    "maxLinesPerFile": 2000
  },

  "agents": {
    "defaultModel": "sonnet",
    "timeout": 300000
  },

  "features": {
    "autoCommit": false,
    "autoFormat": false,
    "strictHooks": false,
    "verboseLogs": false
  }
}
