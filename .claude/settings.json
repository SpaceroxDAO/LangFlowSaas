{
  "version": "1.0.0",
  "description": "Universal Claude Code starter - conservative defaults",

  "permissions": {
    "bash": {
      "allowedCommands": [],
      "requireConfirmation": true
    },
    "fileOperations": {
      "requireConfirmation": false,
      "excludePaths": [
        "**/.env",
        "**/.env.*",
        "**/secrets.*",
        "**/*secret*",
        "**/*password*",
        "**/*credential*"
      ]
    },
    "network": {
      "requireConfirmation": true,
      "allowedDomains": []
    }
  },

  "hooks": {
    "enabled": true,
    "strictMode": false,
    "hooks": [
      {
        "name": "pre-tool-use",
        "event": "pre-tool-use",
        "command": ".claude/hooks/pre-tool-use.sh",
        "description": "Safety warnings for dangerous operations"
      },
      {
        "name": "post-edit",
        "event": "post-edit",
        "command": ".claude/hooks/post-edit.sh",
        "description": "Auto-format if toolchain detected"
      },
      {
        "name": "pre-commit",
        "event": "pre-commit",
        "command": ".claude/hooks/pre-commit.sh",
        "description": "Run tests if test command detected"
      }
    ]
  },

  "output": {
    "style": "concise",
    "includeLineNumbers": true,
    "maxLinesPerFile": 2000
  },

  "agents": {
    "defaultModel": "sonnet",
    "timeout": 300000
  },

  "features": {
    "autoCommit": false,
    "autoFormat": false,
    "strictHooks": false,
    "verboseLogs": false
  }
}
